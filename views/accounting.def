<section id="cta">
    
    <h2>{{=it.i18n('accounting_title')}}</h2>

    <form id="crudForm">
        <div>
            <div class="row uniform 50%">
                <div class="8u 12u(mobilep)">
                    <input type="text" name="name" id="name" placeholder="Name" />
                </div>
                <div class="8u 12u(mobilep)">
                    <a id="save" class="button" onclick="submit('accounting'{{?it.accounting}}, '{{=it.accounting.id}}' {{?}})"> {{=it.i18n('create')}} </a>
                    {{?it.accounting}} <a href="#a" class="button" onclick="load('accounting')"> {{=it.i18n('cancel')}} </a> {{?}}
                </div>
            </div>
        </div>
    </form>
    <br />

    {{?it.accountings}}
	    <section class="box">
	        <div class="table-wrapper">
	            <table>
	                <thead>
	                    <tr>
	                        <td>Name</td>
	                        <td>Action</td>
	                    </tr>
	                </thead>
	                <tbody>
		                {{~it.accountings :accounting :index}}
		                    <tr>
		                        <td>{{=accounting.name}}</td>
		                        <td><a href="#a" onclick="modifyItem('accounting', '{{=accounting.id}}')"> {{=it.i18n('modify')}} </a></td>
    	                        <td><a href="#a" onclick="deleteItem('accounting', '{{=accounting.id}}')"> {{=it.i18n('delete')}} </a></td>
		                    </tr>
		                {{~}}
	                </tbody>
	            </table>
	        </div>
	    </section>
    {{?}}
</section>

<script>
    {{?it.accounting}}
        $('#name').val("{{=it.accounting.name}}");
        $('#save').html("{{=it.i18n('modify')}}");
    {{?}}
</script>