<section id="cta">
    <h2>{{=it.i18n('box_title')}}</h2>

    <form id="crudForm">
        <div>
            <div class="row uniform 50%">
                <div class="8u 12u(mobilep)">
                    <input type="text" name="name" id="name" placeholder="Name" />
                </div>
                <div class="8u 12u(mobilep)">
                    <a id="save" class="button" onclick="submit('box'{{?it.box}}, '{{=it.box.id}}'{{?}})"> {{=it.i18n('create')}} </a>
                    {{?it.box}} <a href="#a" class="button" onclick="load('box')"> {{=it.i18n('cancel')}} </a> {{?}}
                </div>
            </div>
        </div>
    </form>
    <br />

    {{?it.boxs}}
	    <section class="box">
	        <div class="table-wrapper">
	            <table>
	                <thead>
	                    <tr>
	                        <td>Name</td>
	                        <td>Action</td>
	                    </tr>
	                </thead>
	                <tbody>
		                {{~it.boxs :box :index}}
		                    <tr>
		                        <td>{{=box.name}}</td>
		                        <td><a href="#a" onclick="modifyItem('box', '{{=box.id}}')"> {{=it.i18n('modify')}} </a></td>
    	                        <td><a href="#a" onclick="deleteItem('box', '{{=box.id}}')"> {{=it.i18n('delete')}} </a></td>
		                    </tr>
		                {{~}}
	                </tbody>
	            </table>
	        </div>
	    </section>
    {{?}}
</section>

<script>
    {{?it.box}}
        $('#name').val("{{=it.box.name}}");
        $('#save').html("{{=it.i18n('modify')}}");
    {{?}}
</script>